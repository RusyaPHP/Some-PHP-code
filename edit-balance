require "rb.php"; // RedBeanPHP
R::setup( 'mysql:host=localhost;dbname=dbname',
     'login', 'password' );

$data = $_POST;

if (isset($data['editbalance'])) {
    $id            = $data['id'];
    $user          = R::load('users', $id);
    $user->balance = $data['balance'];
    R::store($user);
    header('Location: ' . $_SERVER['REQUEST_URI']);
}
